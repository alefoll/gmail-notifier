{
    "manifest_version": 3,
    "name": "Gmail Notifier",
    "version": "0.4.0",
    "description": "Get notification for your emails",
    "icons": {
        "48": "icons/icon-unread-48.png",
        "92": "icons/icon-unread-92.png"
    },
    "action": {
        "default_area": "navbar"
    },
    "background": {
        "scripts": [
            "dist/main.js"
        ]
    },
    "host_permissions": [
        "*://www.googleapis.com/*",
        "*://oauth2.googleapis.com/*"
    ],
    "permissions": [
        "alarms",
        "identity",
        "menus",
        "notifications",
        "storage",
        "tabs"
    ],
    "incognito": "not_allowed",
    "browser_specific_settings": {
        "gecko": {
            "id": "gmailnotifier@le-foll.fr",
            "strict_min_version": "119.0"
        }
    }
}
